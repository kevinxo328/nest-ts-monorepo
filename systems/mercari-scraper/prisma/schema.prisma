generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model User {
  id                 String             @id @default(uuid())
  username           String             @unique
  email              String?            @unique
  salt               String
  hash               String
  role               User_role          @default(USER)
  rtHash             String?
  rtSalt             String?
  scraper_conditions ScraperCondition[]

  @@map("users")
}

enum User_role {
  USER
  ADMIN
}

model ScraperCondition {
  id       String          @id @default(uuid())
  keyword  String
  priceMin Int?
  priceMax Int?
  user     User            @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   String
  results  ScraperResult[]

  @@map("scraper_conditions")
}

model ScraperResult {
  id          String           @id @default(uuid())
  name        String
  price       Int
  img         String
  link        String
  createdDate DateTime
  condition   ScraperCondition @relation(fields: [conditionId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  conditionId String

  @@map("scraper_results")
}
