generator client {
  provider = "prisma-client-js"
  output   = "./client"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model User {
  id       String    @id @default(uuid())
  username String    @unique
  email    String?   @unique
  salt     String
  hash     String
  role     User_role @default(USER)
  rtHash   String?
  rtSalt   String?

  @@map("users")
}

enum User_role {
  USER
  ADMIN
}
